# ============================================
# AI Ecosystem - Environment Configuration
# ============================================
# Usage: cp .env.example .env && nano .env
# NEVER commit .env to version control.
# Generate secrets: openssl rand -hex 32

# -- Global --
ENVIRONMENT=sandbox
HOST_IP=YOUR_EC2_PUBLIC_IP
TIMEZONE=America/Bogota

# -- PostgreSQL (Chatwoot) --
POSTGRES_USER=chatwoot
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_1
POSTGRES_DB=chatwoot_production

# -- MongoDB (LibreChat) --
MONGO_INITDB_ROOT_USERNAME=librechat
MONGO_INITDB_ROOT_PASSWORD=CHANGE_ME_STRONG_PASSWORD_2

# -- Redis --
REDIS_PASSWORD=CHANGE_ME_REDIS_PASS

# -- N8n --
N8N_ENCRYPTION_KEY=GENERATE_WITH_openssl_rand_hex_32
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=CHANGE_ME_N8N_PASS

# -- Chatwoot --
CHATWOOT_SECRET_KEY_BASE=GENERATE_WITH_openssl_rand_hex_32
CHATWOOT_FRONTEND_URL=http://YOUR_EC2_PUBLIC_IP/chatwoot

# -- LibreChat --
LIBRECHAT_CREDS_KEY=GENERATE_WITH_openssl_rand_hex_32
LIBRECHAT_CREDS_IV=GENERATE_WITH_openssl_rand_hex_16
LIBRECHAT_JWT_SECRET=GENERATE_WITH_openssl_rand_hex_32
LIBRECHAT_JWT_REFRESH_SECRET=GENERATE_WITH_openssl_rand_hex_32

# -- Jupyter Data Connector --
JUPYTER_TOKEN=GENERATE_WITH_openssl_rand_hex_24
